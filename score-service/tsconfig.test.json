{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": ".test-dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "next/image": ["tests/mocks/next-image"],
      "@testing-library/jest-dom/vitest": [
        "tests/mocks/testing-library-jest-dom-vitest"
      ]
    }
  },
  "include": [
    "tests/**/*",
    "app/components/**/*",
    "app/lib/**/*"
  ]
}
